@model MovieApp.Web.Models.EditRolesViewModel
<form id="rolesForm">
    <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
    <div class="form-group mb-3">
        @for (int i = 0; i < Model.AvailableRoles.Count; i++)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="AvailableRoles_@i" name="AvailableRoles[@i].IsSelected" value="@Model.AvailableRoles[i].RoleName" @(Model.AvailableRoles[i].IsSelected ? "checked" : "") />
                <label class="form-check-label" for="AvailableRoles_@i">@Model.AvailableRoles[i].RoleName</label>
            </div>
        }
    </div>
    <div class="form-group mb-3">
        <label for="superAdminEmailRoles">SuperAdmin Email</label>
        <input type="email" class="form-control" id="superAdminEmailRoles" name="SuperAdminEmail" required />
    </div>
    <div class="form-group mb-3">
        <label for="superAdminPasswordRoles">SuperAdmin Password</label>
        <input type="password" class="form-control" id="superAdminPasswordRoles" name="SuperAdminPassword" required />
    </div>
</form>