@model MovieApp.Web.Models.EditRolesViewModel
@{
    ViewData["Title"] = "Edit User Roles";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Edit Roles for @Model.Email</h2>
        <form asp-action="EditRoles" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group mb-3">
                @for (int i = 0; i < Model.AvailableRoles.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="AvailableRoles[i].RoleName" />
                        <input asp-for="AvailableRoles[i].IsSelected" class="form-check-input" />
                        <label asp-for="AvailableRoles[i].IsSelected" class="form-check-label">@Model.AvailableRoles[i].RoleName</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>