@model IEnumerable<MovieApp.Application.DTOs.UserManagementDTO>
@{
    ViewData["Title"] = "User Management";
}
<h1>User Management</h1>
<p><a asp-action="RegisterUser" class="btn btn-primary">Register New User</a></p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Roles</th>
            <th>Created At</th>
            <th>Last Login</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@string.Join(", ", user.CurrentRoles)</td>
                <td>@user.CreatedAt</td>
                <td>@user.LastLoginAt</td>
                <td>
                    <a asp-action="EditRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-warning">Edit Roles</a>
                    <a asp-action="DeleteUser" asp-route-userId="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>