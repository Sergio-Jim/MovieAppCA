@model IEnumerable<MovieApp.Domain.Entities.AuditLog>
@{
    ViewData["Title"] = "Audit Logs";
}
<h1>Audit Logs</h1>
<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Action</th>
            <th>Entity Type</th>
            <th>Entity ID</th>
            <th>Previous State</th>
            <th>Current State</th>
            <th>Details</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.UserId</td>
                <td>@(log.Action ?? "N/A")</td>
                <td>@(log.EntityType ?? "N/A")</td>
                <td>@log.EntityId</td>
                <td>@(log.PreviousState ?? "N/A")</td>
                <td>@(log.CurrentState ?? "N/A")</td>
                <td>@(log.Details ?? "N/A")</td>
                <td>@log.Timestamp</td>
            </tr>
        }
    </tbody>
</table>