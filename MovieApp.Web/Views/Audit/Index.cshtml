@model IEnumerable<MovieApp.Web.Models.AuditLogViewModel>
@{
    ViewData["Title"] = "Audit Logs";
}
<h1>Audit Logs</h1>
<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Action</th>
            <th>Entity Type</th>
            <th>Entity ID</th>
            <th>Previous State</th>
            <th>Current State</th>
            <th>Details</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.UserId</td>
                <td>@log.Action</td>
                <td>@log.EntityType</td>
                <td>@log.EntityId</td>
                <td>@Html.Raw(log.PreviousState)</td>
                <td>@Html.Raw(log.CurrentState)</td>
                <td>@log.Details</td>
                <td>@log.Timestamp</td>
            </tr>
        }
    </tbody>
</table>